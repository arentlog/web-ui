{
  "viewId": "kp-kpso-detail",
  "id": 1,
  "type": "VIEW",
  "subType": "DETAIL",
  "children": [
    {
      "id": 2,
      "type": "FORM",
      "conditionReadonly": "base.isDetail()",
      "children": [
        {
          "id": 3,
          "type": "MOD_CNTR",
          "controls": {
            "toolbar": {
              "id": 4,
              "type": "TOOLBAR",
              "label": "global.options",
              "subLabel": "{{dtl.getSubTitle()}}",
              "controls": {
                "navBtns": {
                  "id": 5,
                  "type": "BTN_SET",
                  "subType": "TBAR_NAV",
                  "children": [
                    {
                      "id": 6,
                      "type": "BTN",
                      "subType": "ICON",
                      "icon": "icon-left-arrow",
                      "stateRef": "^.master",
                      "label": "special.button.back"
                    }
                  ]
                }
              },
              "children": [
                {
                  "id": 7,
                  "type": "BTN",
                  "subType": "",
                  "icon": "icon-new-document",
                  "label": "global.new",
                  "eventClick": "dtl.create()",
                  "conditionDisabled": "!base.isDetail()",
                  "securityLevel": 4
                },
                {
                  "id": 8,
                  "type": "BTN",
                  "subType": "",
                  "icon": "icon-edit",
                  "label": "global.edit",
                  "stateRef": ".edit",
                  "conditionDisabled": "!base.isDetail()",
                  "securityLevel": 3
                },
                {
                  "id": 9,
                  "type": "BTN",
                  "subType": "",
                  "icon": "icon-delete",
                  "label": "global.delete",
                  "eventClick": "dtl.delete()",
                  "conditionDisabled": "!base.isDetail()",
                  "securityLevel": 5
                },
                {
                  "id": 10,
                  "type": "BTN",
                  "subType": "",
                  "icon": "icon-save",
                  "label": "global.save",
                  "submitForm": true,
                  "eventValidated": "dtl.submit()",
                  "conditionDisabled": "base.isDetail()",
                  "securityLevel": 3
                },
                {
                  "id": 11,
                  "type": "BTN",
                  "subType": "",
                  "icon": "icon-reset",
                  "label": "global.reset",
                  "eventClick": "dtl.reset()",
                  "conditionDisabled": "base.isDetail()"
                },
                {
                  "id": 12,
                  "type": "BTN",
                  "subType": "",
                  "icon": "icon-cancel",
                  "label": "global.cancel",
                  "eventClick": "dtl.cancel()",
                  "conditionDisabled": "base.isDetail()"
                }
              ]
            },
            "content": {
              "id": 13,
              "type": "MOD_CONTENT",
              "children": [
                {
                  "id": 14,
                  "type": "EXP_AREA",
                  "label": "global.general",
                  "children": [
                    {
                      "id": 15,
                      "type": "ROW",
                      "children": [
                        {
                          "id": 16,
                          "type": "COL",
                          "subType": "1/2",
                          "children": [
                            {
                              "id": 17,
                              "type": "FIELD",
                              "subType": "LOOKUP",
                              "model": "dtl.kpso.optionname",
                              "label": "global.option.name",
                              "required": true,
                              "meta": "KitOption",
                              "conditionDisabled": "",
                              "conditionReadonly": "!base.isCreate()",
                              "autoFocus": true,
                              "options": {
                                "allowEntry": true
                              }
                            },
                            {
                              "id": 21,
                              "type": "FIELD",
                              "subType": "LOOKUP",
                              "model": "dtl.kpso.comprod",
                              "label": "global.component.product",
                              "meta": "ProdIcspAndXref",
                              "required": true,
                              "eventChange": "dtl.changeComponent()"
                            },
                            {
                              "id": 23,
                              "type": "FIELD",
                              "subType": "LOOKUP",
                              "model": "dtl.kpso.unit",
                              "label": "global.unit",
                              "meta": "Units",
                              "required": true,
                              "options": {
                                "searchParams": {
                                  "prod": {
                                    "type": "REF",
                                    "value": "dtl.kpso.comprod"
                                  }
                                }
                              }
                            },
                            {
                              "id": 22,
                              "type": "FIELD",
                              "subType": "TEXT_BOX",
                              "model": "dtl.kpso.qtyneeded",
                              "label": "global.quantity.needed",
                              "dataFormat": "DECIMAL",
                              "digits": 7,
                              "decimals": 2,
                              "required": false,
                              "sign": "+",
                              "formatOptions": {
                                "minimumFractionDigits": 2,
                                "maximumFractionDigits": 2
                              }
                            }
                          ]
                        },
                        {
                          "id": 18,
                          "type": "COL",
                          "subType": "1/2",
                          "children": [
                            {
                              "id": 25,
                              "type": "FIELD",
                              "subType": "CHECKBOX",
                              "model": "dtl.kpso.variablefl",
                              "label": "global.variable",
                              "dataFormat": "LOGICAL"
                            },
                            {
                              "id": 26,
                              "type": "FIELD",
                              "subType": "CHECKBOX",
                              "model": "dtl.kpso.pricefl",
                              "label": "global.price",
                              "dataFormat": "LOGICAL"
                            },
                            {
                              "id": 27,
                              "type": "FIELD",
                              "subType": "CHECKBOX",
                              "model": "dtl.kpso.printfl",
                              "label": "global.print",
                              "dataFormat": "LOGICAL"
                            },
                            {
                              "id": 28,
                              "type": "FIELD",
                              "subType": "CHECKBOX",
                              "model": "dtl.kpso.compboty",
                              "label": "global.back.order",
                              "dataFormat": "LOGICAL",
                              "subFormat": "BBlank"
                            },
                            {
                              "id": 24,
                              "type": "FIELD",
                              "subType": "TEXT_BOX",
                              "model": "dtl.kpso.refer",
                              "label": "global.reference",
                              "maxLength": 24
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "id": 19,
                  "type": "EXP_AREA",
                  "label": "global.user.fields",
                  "children": [
                    {
                      "id": 20,
                      "type": "CUSTOM",
                      "subType": "UserFields",
                      "options": {
                        "tableName": "kpso",
                        "objectRef": "dtl.kpso",
                        "conditionReadonly": "base.isDetail()"
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ]
}